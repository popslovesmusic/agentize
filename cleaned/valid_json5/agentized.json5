    "identity": {
      "role": "Librarian",
      "backend": "Minimal ML Model (SLM / Rule-based)",
      "purpose": "Prevent Context Pollution"
    },
    
    // The Omega Constraint: Consistency above all.
    "omega_constraint": {
      "enforce_consistency": true,
      "action_on_contradiction": "quarantine_new_entry"
    },

    "protocols": {
      "ingestion_protocol": {
        "rule_1": "Require Provenance (No naked data)",
        "rule_2": "Delta Check (Duplicate detection)",
        "thresholds": {
